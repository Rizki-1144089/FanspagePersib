<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.persib.fanspage.fanspagepersib.update_berita">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etBeritaId"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Member Id"
        android:layout_below="@+id/textView27"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etJudul"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/etBeritaId"
        android:layout_below="@+id/etBeritaId"
        android:hint="Judul Berita"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView27"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Ubah Berita" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:id="@+id/bsimp"
        android:layout_alignTop="@+id/bBatal"
        android:layout_toLeftOf="@+id/bBatal"
        android:layout_toStartOf="@+id/bBatal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BATAL"
        android:id="@+id/bBatal"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/etDeskripsi"
        android:layout_alignRight="@+id/textView27"
        android:layout_alignEnd="@+id/textView27" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etDeskripsi"
        android:layout_below="@+id/etJudul"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:layout_alignRight="@+id/etJudul"
        android:layout_alignEnd="@+id/etJudul"
        android:hint="Deskripsi" />

</RelativeLayout>