<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fanspage.persib.fanspagepersib.MainActivity">



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etMemberId"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Member Id"
        android:layout_below="@+id/textView27"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etNama"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/etMemberId"
        android:layout_below="@+id/etMemberId"
        android:hint="Nama Member"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etAlamat"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/etNama"
        android:hint="Nomor Telepon"
        android:layout_below="@+id/etNama"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView27"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Tambah Member" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:id="@+id/button12"
        android:layout_alignTop="@+id/bBatal"
        android:layout_toLeftOf="@+id/bBatal"
        android:layout_toStartOf="@+id/bBatal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BATAL"
        android:id="@+id/bBatal"
        android:layout_marginTop="92dp"
        android:layout_below="@+id/etAlamat"
        android:layout_alignRight="@+id/textView27"
        android:layout_alignEnd="@+id/textView27" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etTelpon"
        android:layout_below="@+id/etAlamat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:hint="Alamat Member" />

</RelativeLayout>
